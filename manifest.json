{
  "name": "Ultimate Guitar Tab Reader",
  "version": "1.0",
  "description": "Chrome extension for ultimateguitar.com that creates an alternative layout for tabs",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "declarativeContent",
    "http://*.ultimate-guitar.com/",
    "https://*.ultimate-guitar.com/"
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "128": "images/icon.png"
    }
  },
  "icons": {
    "128": "images/icon.png"
  }
}
